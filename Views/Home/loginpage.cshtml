@{
    ViewData["Title"] = "Login Page";
}

<style>
    .login-container {
        background-color: #fff;
        box-shadow: 0 0 100px rgba(0, 0, 0, 0.1);
        padding: 50px;
        margin-left: 35%;
        border-radius: 8px;
        width: 400px;
        height:500px;
        text-align: center;
    }

        .login-container h2 {
            color: #333;
        }

    .login-form {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-size: 14px;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .form-group button {
            background-color: rgb(141, 141, 21);
            color: #fff;
            padding: 10px 15px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            box-shadow: 0 0 10px rgb(27, 27, 6);
        }

            .form-group button:hover {
                background-color: rgb(78, 78, 1);
            }

        .form-group a {
            color: #333;
            text-decoration: none;
            margin-top: 10px;
            display: inline-block;
        }

            .form-group a:hover {
                text-decoration: underline;
            }
</style>

<section>
    <div class="login-container">
        <h2>Login</h2>
        <form class="login-form" action="#" method="post">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="form-group">
                <button type="submit">Login</button>
            </div>
            <div class="form-group">
                <a asp-controller="Home" asp-action="forgotpassword">Forgot Password?</a>
            </div>
            <div class="form-group">
                <p>Don't have an account? <a asp-controller="Home" asp-action="signuppage">Sign Up</a></p>
            </div>
        </form>
    </div>
</section>