@{
    ViewData["Title"] = "Forgot Password Page";
}

<style>
    .forgot-password-container {
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-left: 35%;
        border-radius: 8px;
        width: 300px;
        text-align: center;
    }

        .forgot-password-container h2 {
            color: #333;
        }

    .forgot-password-form {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-size: 14px;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .form-group button {
            background-color: rgb(141, 141, 21);
            color: #fff;
            padding: 10px 15px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            box-shadow: 0 0 10px rgb(27, 27, 6);
        }

            .form-group button:hover {
                background-color: rgb(78, 78, 1);
            }

        .form-group a {
            color: #333;
            text-decoration: none;
            margin-top: 10px;
            display: inline-block;
        }

            .form-group a:hover {
                text-decoration: underline;
            }
</style>

<section>
    <div class="forgot-password-container">
        <h2>Forgot Password</h2>
        <form class="forgot-password-form" action="#" method="post">
            <div class="form-group">
                <label for="newPassword">New Password:</label>
                <input type="password" id="newPassword" name="newPassword" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required>
            </div>
            <div class="form-group">
                <button type="submit">Reset Password</button>
            </div>
            <div class="form-group">
                <p>Remember your password? <a asp-controller="Home" asp-action="loginpage">Login</a></p>
            </div>
        </form>
    </div>
</section>
