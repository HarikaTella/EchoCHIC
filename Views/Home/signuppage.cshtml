@{
    ViewData["Title"] = "Sign Up Page";
}

<style>
    .signup-container {
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 50px;
        margin-left: 35%;
        border-radius: 8px;
        width: 500px;
        /* text-align: center; */
    }

        .signup-container h2 {
            color: #333;
        }

    .signup-form {
        margin-top: 20px;
    }

    .form-group {
        /* margin-bottom: 15px; */
    }

        .form-group label {
            display: block;
            font-size: 14px;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            /* padding: 8px; */
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .form-group button {
            background-color: rgb(141, 141, 21);
            color: #fff;
            padding: 10px 15px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            box-shadow: 0 0 10px rgb(27, 27, 6);
        }

            .form-group button:hover {
                background-color: rgb(78, 78, 1);
            }

        .form-groupcheckbox-group {
            display: flex;
            
        }
        .check
        {
            margin-left:-20px;
        }

        .form-group a {
            color: #333;
            text-decoration: none;
            margin-top: 10px;
            display: inline-block;
        }

            .form-group a:hover {
                text-decoration: underline;
            }
</style>

<section>
    <div class="signup-container">
        <h2 style="text-align:center;">Sign Up</h2>
        <form class="signup-form" action="#" method="post">
            <div class="form-group">
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" required>
            </div>
            <div class="form-group">
                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="phoneNumber">Phone Number:</label>
                <input type="tel" id="phoneNumber" name="phoneNumber" required>
            </div>
            <div class="form-group">
                <label for="password">Create New Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required>
            </div>
            <div class="form-groupcheckbox-group">
                <input type="checkbox"  for="termsCheckbox" required> I agree to the Terms and Conditions</>
                
            </div>
            <div class="form-group">
                <button  type="submit">Sign Up</button>
            </div>
            <div class="form-group">
                <p>Already have an account? <a asp-controller="Home" asp-action="loginpage">Login</a></p>
            </div>
        </form>
    </div>
</section>